{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Article</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ entity.content }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{{ entity.creationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lasteditdate</th>
                <td>{{ entity.lastEditDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Publishdate</th>
                <td>{{ entity.publishDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Publi√©</th>
                <td>{{ entity.published }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ entity.enabled }}</td>
            </tr>
            <tr>
                <th>Nom de l'auteur</th>
                <td>{{ entity.author.login }}</td>
            </tr>
       </tbody>
    </table>

      
      
        <ul class="record_actions">
    <li>
        <a href="{{ path('article') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('article_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
